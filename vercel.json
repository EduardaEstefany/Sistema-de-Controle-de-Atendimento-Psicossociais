{
  "version": 2,
  "builds": [
    {
      "src": "server-simple.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["public/**", "src/**", "data/**"]
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "server-simple.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
